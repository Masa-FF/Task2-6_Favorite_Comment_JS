<% if book.favorited_by?(current_user) %>
  <li>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
      <i><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></i>
      <%= book.favorites.count %>
    <% end %>
  </li>
  <% else %>
  <li>
    <%= link_to book_favorites_path(book), method: :post, remote: true do %>
      <i><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span></i>
      <%= book.favorites.count %>
    <% end %>
  </li>
<% end %>
