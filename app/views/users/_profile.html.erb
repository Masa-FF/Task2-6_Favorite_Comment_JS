
<table class="table">
	<tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>

	<tr>
		<th>name</th>
		<th><%= user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= user.introduction %></th>
	</tr>
	
	<tr>
		<th>Follow</th>
		<th><%= link_to "#{user.followings.count} フォロー" %></th>
	</tr>
		<tr>
		<th>Follower</th>
		<th><%= link_to "#{user.followers.count} フォロー" %></th>
	</tr>
	
</table>

<div class="row">
		<% if user == current_user %>
		<%= link_to 'Edit', edit_user_path(user), class: 'btn btn-success btn-block' %>
		<% else %>
		<%= link_to 'MyPage', user_path(current_user), class: 'btn btn-success btn-block' %>
		<% end %>
</div>